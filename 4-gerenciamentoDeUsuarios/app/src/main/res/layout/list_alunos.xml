<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/visualizacao_foto_imageView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visualizacao_nome_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="TextView" />

            <TextView
                android:id="@+id/visualizacao_idade_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"



                android:text="TextView" />

            <TextView
                android:id="@+id/visualizacao_email_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:singleLine="true"
                android:text="TextView" />

            <TextView
                android:id="@+id/visualizacao_cpf_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:singleLine="true"
                android:text="TextView" />



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>